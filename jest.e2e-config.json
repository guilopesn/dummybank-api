{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "src",
  "testRegex": ".*\\.e2e-spec\\.ts$",
  "testEnvironment": "node",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s",
    "!**/index.(t|j)s",
    "!**/migrations/*.(t|j)s"
  ],
  "coverageDirectory": "../e2e-coverage"
}
